<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardRate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate"
            style="@style/AccountBalanceItemTitle"/>

        <TextView
            android:id="@+id/txtValuePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 BTC"
            style="@style/AccountBalanceItemValuePrimary"/>

        <TextView
            android:id="@+id/txtValueSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            style="@style/AccountBalanceItemValueSecondary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>